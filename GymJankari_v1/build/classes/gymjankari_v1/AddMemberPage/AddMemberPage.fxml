                              <HBox spacing="20.0">
                                 <children>
                                    <VBox spacing="25.0">
                                       <children>
                                          <Label text="Basic Information :">
                                             <font>
                                                <Font name="System Bold" size="13.0" />
                                             </font>
                                          </Label>
                                          <JFXTextField fx:id="fullnameTextField" labelFloat="true" promptText="Full Name" />
                                          <JFXDatePicker fx:id="dobDatePicker" defaultColor="#4CAF50" prefHeight="25.0" prefWidth="275.0" promptText="Date Of Birth" />
